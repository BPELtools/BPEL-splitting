<bpel:process name="OrderingProcess"
         targetNamespace="http://www.iaas.uni-stuttgart.de"
         suppressJoinFailure="yes"
         xmlns:tns="http://www.iaas.uni-stuttgart.de"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable">
    <!-- Import the client WSDL -->
    
    <bpel:import location="OrderingProcess.wsdl" namespace="http://www.iaas.uni-stuttgart.de" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
	
	<bpel:import namespace="http://www.iaas.uni-stuttgart.de"
		location="ProcessPayment.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
    <bpel:partnerLinks>
        <!--
        The 'client' role represents the requester of this service. It is 
        used for callback. The location and correlation information associated
        with the client role are automatically set using WS-Addressing.
        -->
        <bpel:partnerLink name="client"
                     partnerLinkType="tns:OrderingProcessPLT" myRole="OrderProcessProvider"/>
        <bpel:partnerLink name="paymentPL" partnerLinkType="tns:ProcessPaymentPLT" partnerRole="ProcessPayment"></bpel:partnerLink>
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input" messageType="tns:OrderInfoRequestMessage"/>
        <bpel:variable name="paymentInfo" messageType="tns:processPaymentRequest"></bpel:variable>
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         

    <bpel:correlationSets>
        <bpel:correlationSet name="CorrelationSet" properties="tns:correlProperty"></bpel:correlationSet>
    </bpel:correlationSets>
    
    
	<bpel:flow name="Flow">
		<bpel:links>
			<bpel:link name="linkA2B"></bpel:link>
			<bpel:link name="linkB2C"></bpel:link>
			<bpel:link name="linkB2D"></bpel:link>
			<bpel:link name="linkC2G"></bpel:link>
			<bpel:link name="linkD2G"></bpel:link>
			<bpel:link name="linkB2G"></bpel:link>
		</bpel:links>
		<bpel:receive name="A" partnerLink="client" operation="initiate"
			portType="tns:OrderingProcessPT" createInstance="yes" variable="input">
			<bpel:sources>
				<bpel:source linkName="linkA2B"></bpel:source>
			</bpel:sources>
            <bpel:correlations>
                <bpel:correlation set="CorrelationSet" initiate="yes"></bpel:correlation>
            </bpel:correlations>
        </bpel:receive>
		<bpel:assign validate="no" name="B">
			<bpel:targets>
				<bpel:target linkName="linkA2B"></bpel:target>
			</bpel:targets>
			<bpel:sources>
				<bpel:source linkName="linkB2C">
                    <bpel:transitionCondition><![CDATA[$input.status="gold"]]></bpel:transitionCondition>
                </bpel:source>
				<bpel:source linkName="linkB2D">
                    <bpel:transitionCondition><![CDATA[$input.status="silver"]]></bpel:transitionCondition>
                </bpel:source>
				<bpel:source linkName="linkB2G"></bpel:source>
			</bpel:sources>
			
			<bpel:copy>
				<bpel:from part="acountNumber" variable="input">
				</bpel:from>
				<bpel:to part="actNum" variable="paymentInfo">
				</bpel:to>
			</bpel:copy>
			
			<bpel:copy>
				<bpel:from>
                    <![CDATA[$input.orderTotalPrice + 5*$input.numDeliveries]]>
				</bpel:from>
				<bpel:to part="amt" variable="paymentInfo">
				</bpel:to>
			</bpel:copy>
		</bpel:assign>
		
		<bpel:assign validate="no" name="C">
			<bpel:targets>
				<bpel:target linkName="linkB2C"></bpel:target>
			</bpel:targets>
			<bpel:sources>
				<bpel:source linkName="linkC2G"></bpel:source>
			</bpel:sources>
			<bpel:copy>
				<bpel:from>
                <![CDATA[$paymentInfo.amt*0.9]]>
				</bpel:from>
				<bpel:to part="amt" variable="paymentInfo">
				</bpel:to>
			</bpel:copy>
		</bpel:assign>
		<bpel:assign validate="no" name="D">
			<bpel:targets>
				<bpel:target linkName="linkB2D"></bpel:target>
			</bpel:targets>
			<bpel:sources>
				<bpel:source linkName="linkD2G"></bpel:source>
			</bpel:sources>
			<bpel:copy>
				<bpel:from>
                    <![CDATA[$paymentInfo.amt*0.95]]>
				</bpel:from>
				<bpel:to part="amt" variable="paymentInfo">
				</bpel:to>
			</bpel:copy>
		</bpel:assign>
		<bpel:invoke name="G" partnerLink="paymentPL" operation="processPayment" portType="tns:ProcessPayment" inputVariable="paymentInfo">
			<bpel:correlations>
                <bpel:correlation set="CorrelationSet" initiate="no"></bpel:correlation>
            </bpel:correlations>
			<bpel:targets>
				<bpel:target linkName="linkC2G"></bpel:target>
				<bpel:target linkName="linkD2G"></bpel:target>
				<bpel:target linkName="linkB2G"></bpel:target>
			</bpel:targets>
		</bpel:invoke>
	</bpel:flow>
</bpel:process>

