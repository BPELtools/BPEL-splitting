                     partnerLinkType="tns:OrderingProcessPLT" myRole="OrderingProcessProvider"/>
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input"
                  messageType="tns:OrderingProcessRequestMessage"/>
                  
        <!-- 
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="response"
                  messageType="tns:OrderingProcessResponseMessage"/>
    </bpel:variables>

 	<bpel:correlationSets>
        <bpel:correlationSet name="CorrelationSet" properties="tns:correlProperty"></bpel:correlationSet>
    </bpel:correlationSets>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:flow name="Flow">
		<bpel:links>
			<bpel:link name="linkA2B"></bpel:link>
			<bpel:link name="linkB2C"></bpel:link>
			<bpel:link name="linkB2D"></bpel:link>
			<bpel:link name="linkB2H"></bpel:link>
			<bpel:link name="linkC2H"></bpel:link>
			<bpel:link name="linkD2H"></bpel:link>
		</bpel:links>
		<bpel:receive name="A" partnerLink="client" operation="process"
			portType="tns:OrderingProcessPT" variable="input" createInstance="yes">
			<bpel:sources>
				<bpel:source linkName="linkA2B"></bpel:source>
			</bpel:sources>
            <bpel:correlations>
                <bpel:correlation set="CorrelationSet" initiate="yes"></bpel:correlation>
            </bpel:correlations>
        </bpel:receive>
		<bpel:assign validate="no" name="B">
			<bpel:targets>
				<bpel:target linkName="linkA2B"></bpel:target>
			</bpel:targets>
			<bpel:sources>
				<bpel:source linkName="linkB2C">
                    <bpel:transitionCondition><![CDATA[$input.status="gold"]]></bpel:transitionCondition>
                </bpel:source>
				<bpel:source linkName="linkB2D">
                    <bpel:transitionCondition><![CDATA[$input.status="silver"]]></bpel:transitionCondition>
                </bpel:source>
				<bpel:source linkName="linkB2H"></bpel:source>
			</bpel:sources>
			<bpel:copy>
				<bpel:from>
                    <![CDATA[string("Dear customer,...")]]>
				</bpel:from>
				<bpel:to part="normal" variable="response">
				</bpel:to>
			</bpel:copy>
		</bpel:assign>
		<bpel:assign validate="no" name="C">
			<bpel:targets>
				<bpel:target linkName="linkB2C"></bpel:target>
			</bpel:targets>
			<bpel:sources>
				<bpel:source linkName="linkC2H"></bpel:source>
			</bpel:sources>
			<bpel:copy>
				<bpel:from>          
                   <![CDATA[concat($response.gold, "10% discount")]]>
				</bpel:from>
				<bpel:to part="gold" variable="response">
				</bpel:to>
			</bpel:copy>
		</bpel:assign>
		<bpel:assign validate="no" name="D">
			<bpel:targets>
				<bpel:target linkName="linkB2D"></bpel:target>
			</bpel:targets>
			<bpel:sources>
				<bpel:source linkName="linkD2H"></bpel:source>
			</bpel:sources>
			<bpel:copy>
				<bpel:from>
                    <![CDATA[concat($response.silver, " 5% discount")]]>
				</bpel:from>
				<bpel:to part="silver" variable="response">
				</bpel:to>
			</bpel:copy>
		</bpel:assign>
		<bpel:reply name="H" partnerLink="client" operation="process"
			portType="tns:OrderingProcessPT" variable="response">
			<bpel:targets>
				<bpel:target linkName="linkB2H"></bpel:target>
				<bpel:target linkName="linkC2H"></bpel:target>
				<bpel:target linkName="linkD2H"></bpel:target>
			</bpel:targets>
            <bpel:correlations>
                <bpel:correlation set="CorrelationSet" initiate="no"></bpel:correlation>
            </bpel:correlations>
